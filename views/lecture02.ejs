<div class="modal fade" id="presentationModal" tabindex="-1" aria-labelledby="presentationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 1000px; aspect-ratio: 16/9;">
        <div class="modal-content">
            <div class="modal-header border-0" style="background: linear-gradient(135deg, #1a2a6c, #b21f1f); color: white;">
                <h5 class="modal-title" id="presentationModalLabel">PPT 프레젠테이션</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="padding: 0;">
                <div class="presentation-container">
                    <div class="presentation-nav d-flex justify-content-between align-items-center p-3">
                        <button class="btn btn-outline-light prev-slide" onclick="showSlide(currentSlide - 1)">
                            <i class="fas fa-chevron-left me-2"></i>이전
                        </button>
                        <button class="btn btn-outline-light next-slide" onclick="showSlide(currentSlide + 1)">
                            다음<i class="fas fa-chevron-right ms-2"></i>
                        </button>
                    </div>
                    <div class="slide-container" style="height: calc(100vh - 100px);"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// PPT Presentation Manager
let currentSlide = 0;
const slides = [
    '/ppt_sample/001.html',
    '/ppt_sample/002.html',
    '/ppt_sample/003.html',
    '/ppt_sample/004.html',
    '/ppt_sample/005.html'
];

// Add required styles for slides
const slideStyles = `
    .slide {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #0F4C81 0%, #1F7A8C 100%);
        color: white;
        position: relative;
        overflow: hidden;
        padding: 2rem;
        box-sizing: border-box;
    }
    .slide * {
        font-family: 'Noto Sans KR', sans-serif;
    }
    .circle {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.05);
    }
    .tech-icon {
        position: absolute;
        color: rgba(255, 255, 255, 0.7);
        animation: float 3s ease-in-out infinite;
    }
    @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
    }
    .main-title {
        text-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
    }
`;

function initializePresentation() {
    showSlide(0);
}

function showSlide(index) {
    if (index < 0) {
        index = slides.length - 1;
    } else if (index >= slides.length) {
        index = 0;
    }
    
    currentSlide = index;
    
    // Fetch and load the slide content
    fetch(slides[index])
        .then(response => response.text())
        .then(html => {
            const slideContainer = document.querySelector('.slide-container');
            if (!slideContainer) return;
            
            // Extract the body content
            const parser = new DOMParser();
            const doc = parser.parseFromString(html, 'text/html');
            const slideContent = doc.querySelector('body').innerHTML;
            
            // Create a new div with the slide class
            const slideDiv = document.createElement('div');
            slideDiv.className = 'slide';
            slideDiv.innerHTML = slideContent;
            
            // Clear existing content and add new slide
            slideContainer.innerHTML = '';
            slideContainer.appendChild(slideDiv);
            
            // Add required styles
            const style = document.createElement('style');
            style.textContent = slideStyles;
            document.head.appendChild(style);
            
            // Update navigation buttons
            updateNavButtons();
        })
        .catch(error => console.error('Error loading slide:', error));
}

// Update slide navigation buttons
function updateNavButtons() {
    const prevButton = document.querySelector('.prev-slide');
    const nextButton = document.querySelector('.next-slide');
    
    if (currentSlide === 0) {
        prevButton.classList.add('disabled');
    } else {
        prevButton.classList.remove('disabled');
    }
    
    if (currentSlide === slides.length - 1) {
        nextButton.classList.add('disabled');
    } else {
        nextButton.classList.remove('disabled');
    }
}

// Add event listener for modal show
const modal = document.getElementById('presentationModal');
modal.addEventListener('show.bs.modal', () => {
    initializePresentation();
});

modal.addEventListener('shown.bs.modal', () => {
    updateNavButtons();
});

// Add keyboard navigation
document.addEventListener('keydown', (e) => {
    if (modal.classList.contains('show')) {
        if (e.key === 'ArrowLeft') {
            showSlide(currentSlide - 1);
        } else if (e.key === 'ArrowRight') {
            showSlide(currentSlide + 1);
        }
    }
});
</script>