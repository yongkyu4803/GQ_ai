<script>
function copyHarshWritingTemplate() {
    const templateElement = document.getElementById('harshWritingTemplate');
    const templateText = templateElement.textContent;
    
    // 클립보드에 복사
    navigator.clipboard.writeText(templateText).then(function() {
        // 성공 메시지 표시
        const button = event.target.closest('button');
        const originalContent = button.innerHTML;
        button.innerHTML = '<i class="fas fa-check me-1"></i>복사됨!';
        button.classList.remove('btn-outline-primary');
        button.classList.add('btn-success');
        
        // 2초 후 원래 상태로 복원
        setTimeout(function() {
            button.innerHTML = originalContent;
            button.classList.remove('btn-success');
            button.classList.add('btn-outline-primary');
        }, 2000);
    }).catch(function(err) {
        // 실패 시 대체 방법 (구형 브라우저 지원)
        const textArea = document.createElement('textarea');
        textArea.value = templateText;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
        
        // 성공 메시지 표시
        const button = event.target.closest('button');
        const originalContent = button.innerHTML;
        button.innerHTML = '<i class="fas fa-check me-1"></i>복사됨!';
        button.classList.remove('btn-outline-primary');
        button.classList.add('btn-success');
        
        setTimeout(function() {
            button.innerHTML = originalContent;
            button.classList.remove('btn-success');
            button.classList.add('btn-outline-primary');
        }, 2000);
    });
}
</script>

