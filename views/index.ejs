<!-- index.ejs -->
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>생성형 AI 이해하기</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Nanum+Gothic:wght@400;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" as="style" crossorigin href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.8/dist/web/static/pretendard.css" />
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('navbar') %>

    <div id="content">
        <!-- 랜딩 섹션 -->
        <section id="landing">
            <div class="container text-center landing-container">
                <h1>Welcome to the Generative AI Lecture</h1>
                <p>Explore how Generative AI can transform your work and solve critical challenges.</p>
            </div>
        </section>


        <!-- 강의 섹션 -->
        <section id="lectures" class="py-5">         
            <div class="container">             
                <div class="row">                 
                    <% lectures.forEach(function(lecture) { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h2 class="card-title mb-4"><%= lecture.number %>. <%= lecture.title %></h2>
                                    <p class="card-text"><%= lecture.description %></p>
                                    <a class="btn btn-outline-primary btn-sm rounded-pill" href="<%= lecture.link %>">바로가기</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>

                    <!-- Q&A 카드 -->
                    <div class="col-md-6 col-lg-4 mb-4">                     
                        <div class="card">                         
                            <div class="card-body">                             
                                <h2 class="card-title mb-4">Q&amp;A</h2>
                                <p class="card-text">질문을 통해 이해도를 높이세요.</p>
                                <a class="btn btn-outline-primary btn-sm rounded-pill" href="/qna">바로가기</a>                         
                            </div>                     
                        </div>                 
                    </div>             
                </div>         
            </div>     
        </section>

        <!-- 푸터 섹션 -->
        <footer class="py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start">
                        <p class="mb-0" style="font-family: 'Montserrat', sans-serif; letter-spacing: 0.5px;">
                            <i class="fas fa-star me-1"></i> Designed with <i class="fas fa-heart mx-1" style="color: #ff6b6b;"></i> by GQ
                        </p>
                    </div>
                    <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                        <p class="mb-0" style="font-size: 0.9rem; opacity: 0.8;">
                            © <%= new Date().getFullYear() %> GQ AI Learning Platform. All rights reserved.
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 토글 가능한 헤딩 기능 추가
        document.addEventListener('DOMContentLoaded', function() {
            const toggleHeadings = document.querySelectorAll('.toggleable .toggle-head');
            
            toggleHeadings.forEach(heading => {
                // 초기 상태 설정
                if(heading.classList.contains('active')) {
                    const content = heading.nextElementSibling;
                    if(content && content.classList.contains('toggle-content')) {
                        content.style.display = 'block';
                    }
                }
                
                heading.addEventListener('click', function() {
                    this.classList.toggle('active');
                    const content = this.nextElementSibling;
                    
                    if(content && content.classList.contains('toggle-content')) {
                        if(this.classList.contains('active')) {
                            content.style.display = 'block';
                            content.style.animation = 'fadeIn 0.5s ease';
                        } else {
                            content.style.display = 'none';
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>
