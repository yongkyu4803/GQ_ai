    // Î∞©Î¨∏Ïûê Ïπ¥Ïö¥Ìä∏ Î°úÎìú (Ìë∏ÌÑ∞Ïö©)
    async function loadFooterVisitorCounts() {
        const footerTotalElement = document.getElementById('footer-total-visitors');
        const footerDailyElement = document.getElementById('footer-daily-visitors');
        
        try {
            const controller = new AbortController();
            const timeoutId = setTimeout(() => controller.abort(), 5000); // 5Ï¥à ÌÉÄÏûÑÏïÑÏõÉ
            
            const response = await fetch('/api/visitors', {
                signal: controller.signal,
                headers: {
                    'Accept': 'application/json',
                    'Cache-Control': 'no-cache'
                }
            });
            
            clearTimeout(timeoutId);
            
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }
            
            const data = await response.json();
            
            // ÏùëÎãµ Îç∞Ïù¥ÌÑ∞ Í≤ÄÏ¶ù
            if (!data || typeof data !== 'object') {
                throw new Error('ÏûòÎ™ªÎêú ÏùëÎãµ ÌòïÏãù');
            }
            
            if (!data.success) {
                throw new Error(data.error || 'Î∞©Î¨∏Ïûê Ïàò Ï°∞Ìöå Ïã§Ìå®');
            }
            
            // Îç∞Ïù¥ÌÑ∞ Í≤ÄÏ¶ù Î∞è ÏïàÏ†ÑÌïú ÌëúÏãú
            const totalVisitors = Number.isInteger(data.totalVisitors) && data.totalVisitors >= 0 ? data.totalVisitors : 0;
            const dailyVisitors = Number.isInteger(data.dailyVisitors) && data.dailyVisitors >= 0 ? data.dailyVisitors : 0;
            
            // Ìë∏ÌÑ∞Ïùò Î∞©Î¨∏Ïûê ÌÜµÍ≥Ñ ÏóÖÎç∞Ïù¥Ìä∏
            if (footerTotalElement) {
                footerTotalElement.textContent = totalVisitors.toLocaleString('ko-KR');
            }
            if (footerDailyElement) {
                footerDailyElement.textContent = dailyVisitors.toLocaleString('ko-KR');
            }
            
            // Í∞úÎ∞ú Î™®Îìú ÌëúÏãú (ÏΩòÏÜîÏóêÏÑúÎßå)
            if (data.mode === 'local-memory') {
                console.log('üè† Î°úÏª¨ Í∞úÎ∞ú Î™®Îìú: Î©îÎ™®Î¶¨ Ï†ÄÏû•ÏÜå ÏÇ¨Ïö© Ï§ë');
            } else if (data.mode === 'vercel-kv') {
                console.log('‚òÅÔ∏è Vercel KV Î™®Îìú: ÌÅ¥ÎùºÏö∞Îìú Ï†ÄÏû•ÏÜå ÏÇ¨Ïö© Ï§ë');
            }
            
        } catch (error) {
            console.error('Î∞©Î¨∏Ïûê Ïàò Î°úÎìú Ïã§Ìå®:', error.message);
            
            // Í∏∞Î≥∏Í∞íÏúºÎ°ú ÏÑ§Ï†ï
