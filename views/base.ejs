<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>생성형 AI 이해하기</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Nanum+Gothic:wght@400;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Tuffy:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" as="style" crossorigin href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.8/dist/web/static/pretendard.css" />
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('navbar') %>

    <!-- lecture-header 영역 -->
    <div class="lecture-header">
        <div class="container">
            <h1><%= title %></h1>
            <p class="lead"><%= description %></p>
        </div>
    </div>

    <!-- 메인 컨텐츠 영역 -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <%- body %>
            </div>
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="card" style="height:auto; max-height:none; overflow-y:visible;">
                        <div class="card-header">
                            <i class="fas fa-list me-2"></i>강의 목차
                        </div>
                        <div class="card-body">
                            <div class="nav flex-column nav-pills">
                                <% lectures.forEach(function(lecture) { %>
                                    <a class="nav-link <%= path === lecture.link ? 'active' : '' %>" 
                                       href="<%= lecture.link %>">
                                        <span class="lecture-number"><%= lecture.number %></span>
                                        <span class="lecture-title"><%= lecture.title %></span>
                                    </a>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 푸레젠테이션 모달 추가 -->
    <div class="modal fade" id="presentationModal" tabindex="-1">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content bg-dark">
                <div class="modal-header border-0">
                    <h5 class="modal-title text-white">
                        <i class="fas fa-graduation-cap me-2"></i>
                        <span id="modalTitle"></span>
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-0">
                    <div class="presentation-wrapper">
                        <div class="presentation-content text-white">
                            <div id="slideContent"></div>
                            <div class="presentation-controls mt-4">
                                <button class="btn btn-outline-light me-2" onclick="prevSlide()">
                                    <i class="fas fa-chevron-left"></i>
                                </button>
                                <span id="slideCounter" class="mx-3"></span>
                                <button class="btn btn-outline-light ms-2" onclick="nextSlide()">
                                    <i class="fas fa-chevron-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 확장된 푸터 -->
    <footer class="expanded-footer">
        <div class="container">
            <div class="row g-4">
                <!-- 플랫폼 정보 -->
                <div class="col-lg-4 col-md-6">
                    <div class="footer-section">
                        <h5 class="footer-title">
                            <i class="fas fa-graduation-cap me-2"></i>
                            GQ AI Learning Platform
                        </h5>
                        <p class="footer-description">
                            생성형 AI를 활용한 업무 혁신과 실무 적용을 위한 종합 교육 플랫폼입니다.
                        </p>
                        <div class="footer-social">
                            <a href="#" class="social-link"><i class="fab fa-youtube"></i></a>
                            <a href="#" class="social-link"><i class="fab fa-linkedin"></i></a>
                            <a href="#" class="social-link"><i class="fab fa-github"></i></a>
                        </div>
                    </div>
                </div>

                <!-- 빠른 링크 -->
                <div class="col-lg-3 col-md-6">
                    <div class="footer-section">
                        <h6 class="footer-subtitle">빠른 링크</h6>
                        <ul class="footer-links">
                            <li><a href="/"><i class="fas fa-home me-2"></i>홈</a></li>
                            <li><a href="/quiz"><i class="fas fa-brain me-2"></i>퀴즈</a></li>
                            <li><a href="/qna"><i class="fas fa-question-circle me-2"></i>Q&A</a></li>
                            <li><a href="/contact"><i class="fas fa-envelope me-2"></i>문의</a></li>
                        </ul>
                    </div>
                </div>

                <!-- 방문자 통계 -->
                <div class="col-lg-3 col-md-6">
                    <div class="footer-section">
                        <h6 class="footer-subtitle">
                            <i class="fas fa-chart-bar me-2"></i>방문자 통계
                        </h6>
                        <div class="visitor-stats-footer">
                            <div class="stat-item">
                                <div class="stat-number" id="footer-total-visitors">-</div>
                                <div class="stat-label">총 방문자</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-number" id="footer-daily-visitors">-</div>
                                <div class="stat-label">오늘 방문자</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 강의 정보 -->
                <div class="col-lg-2 col-md-6">
                    <div class="footer-section">
                        <h6 class="footer-subtitle">강의 과정</h6>
                        <div class="course-stats">
                            <div class="course-item">
                                <span class="course-number">13</span>
                                <span class="course-label">개 강의</span>
                            </div>
                            <div class="course-item">
                                <span class="course-number">4</span>
                                <span class="course-label">개 단계</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 하단 카피라이트 -->
            <div class="footer-bottom">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start">
                        <p class="copyright-text">
                            © <%= new Date().getFullYear() %> GQ AI Learning Platform. All rights reserved.
                        </p>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <p class="footer-tagline">
                            <i class="fas fa-star me-1"></i>
                            Designed with <i class="fas fa-heart mx-1 text-danger"></i> by GQ
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- 방문자 카운터 JavaScript -->
    <script>
    // 방문자 카운트 로드 (푸터용)
    async function loadFooterVisitorCounts() {
        try {
            const response = await fetch('/api/visitors');
            const data = await response.json();
            
            // 데이터 검증 및 안전한 표시
            const totalVisitors = data && typeof data.totalVisitors === 'number' ? data.totalVisitors : 0;
            const dailyVisitors = data && typeof data.dailyVisitors === 'number' ? data.dailyVisitors : 0;
            
            // 푸터의 방문자 통계 업데이트
            const footerTotalElement = document.getElementById('footer-total-visitors');
            const footerDailyElement = document.getElementById('footer-daily-visitors');
            
            if (footerTotalElement) {
                footerTotalElement.textContent = totalVisitors.toLocaleString();
            }
            if (footerDailyElement) {
                footerDailyElement.textContent = dailyVisitors.toLocaleString();
            }
            
            // 개발 모드 표시 (콘솔에서만)
            if (data && data.mode === 'local-memory') {
                console.log('🏠 로컬 개발 모드: 메모리 저장소 사용 중');
            } else if (data && data.mode === 'vercel-kv') {
                console.log('☁️ Vercel KV 모드: 클라우드 저장소 사용 중');
            }
            
            if (data && data.error) {
                console.warn('⚠️ 방문자 카운터 오류:', data.error);
            }
        } catch (error) {
            console.error('Failed to load visitor counts:', error);
            const footerTotalElement = document.getElementById('footer-total-visitors');
            const footerDailyElement = document.getElementById('footer-daily-visitors');
            
            if (footerTotalElement) footerTotalElement.textContent = '0';
            if (footerDailyElement) footerDailyElement.textContent = '0';
        }
    }

    // 페이지 로드 시 방문자 카운트 로드
    document.addEventListener('DOMContentLoaded', loadFooterVisitorCounts);
    </script>
    
    <script>
    let currentSlide = 1;
    let totalSlides = 1;
    let slides = [];

    function initializePresentation(data) {
        const lectureData = typeof data === 'string' ? JSON.parse(data) : data;
        const { title, description, mainTopics } = lectureData;
        
        // 타이틀 슬라이드 준비
        slides = [{
            type: 'title',
            content: `<h1>${title}</h1><h3>${description}</h3>`
        }];
        
        // 주제별 슬라이드 준비
        mainTopics.forEach(topic => {
            slides.push({
                type: 'content',
                content: `
                    <h2>${topic.title}</h2>
                    <ul>
                        ${topic.subTopics.map(sub => `<li>${sub}</li>`).join('')}
                    </ul>
                `
            });
        });
        
        totalSlides = slides.length;
        currentSlide = 1;
        showSlide(1);
        
        document.getElementById('modalTitle').textContent = title;
    }

    function showSlide(n) {
        currentSlide = n;
        if (currentSlide > totalSlides) currentSlide = 1;
        if (currentSlide < 1) currentSlide = totalSlides;
        
        const slideContent = document.getElementById('slideContent');
        slideContent.innerHTML = `<div class="slide active">${slides[currentSlide-1].content}</div>`;
        
        document.getElementById('slideCounter').textContent = `${currentSlide} / ${totalSlides}`;
    }

    function nextSlide() { showSlide(currentSlide + 1); }
    function prevSlide() { showSlide(currentSlide - 1); }
    </script>
</body>
</html> 