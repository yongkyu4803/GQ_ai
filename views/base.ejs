    <!-- 방문자 카운터 JavaScript -->
    <script>
    // 방문자 카운트 로드 (푸터용)
    async function loadFooterVisitorCounts() {
        try {
            const response = await fetch('/api/visitors');
            const data = await response.json();
            
            // 데이터 검증 및 안전한 표시
            const totalVisitors = data && typeof data.totalVisitors === 'number' ? data.totalVisitors : 0;
            const dailyVisitors = data && typeof data.dailyVisitors === 'number' ? data.dailyVisitors : 0;
            
            // 푸터의 방문자 통계 업데이트
            const footerTotalElement = document.getElementById('footer-total-visitors');
            const footerDailyElement = document.getElementById('footer-daily-visitors');
            
            if (footerTotalElement) {
                footerTotalElement.textContent = totalVisitors.toLocaleString();
            }
            if (footerDailyElement) {
                footerDailyElement.textContent = dailyVisitors.toLocaleString();
            }
            
            // 개발 모드 표시 (콘솔에서만)
            if (data && data.mode === 'local-memory') {
                console.log('🏠 로컬 개발 모드: 메모리 저장소 사용 중');
            } else if (data && data.mode === 'vercel-kv') {
                console.log('☁️ Vercel KV 모드: 클라우드 저장소 사용 중');
            }
            
            if (data && data.error) {
                console.warn('⚠️ 방문자 카운터 오류:', data.error);
            }
        } catch (error) {
            console.error('Failed to load visitor counts:', error);
            const footerTotalElement = document.getElementById('footer-total-visitors');
            const footerDailyElement = document.getElementById('footer-daily-visitors');
            
            if (footerTotalElement) footerTotalElement.textContent = '0';
            if (footerDailyElement) footerDailyElement.textContent = '0';
        }
    }

    // 페이지 로드 시 방문자 카운트 로드
    document.addEventListener('DOMContentLoaded', loadFooterVisitorCounts);
    </script>
    
    <!-- 런칭 팝업 JavaScript -->
    <script>
    // 런칭 팝업 관리
    document.addEventListener('DOMContentLoaded', function() {
        const LAUNCH_POPUP_KEY = 'launch_popup_shown_v1';
        const LAUNCH_POPUP_DELAY = 2000; // 2초 후 표시
        
        // 이미 팝업을 본 사용자인지 확인
        function hasSeenPopup() {
            return localStorage.getItem(LAUNCH_POPUP_KEY) === 'true';
        }
        
        // 팝업을 봤다고 표시
        function markPopupAsSeen() {
            localStorage.setItem(LAUNCH_POPUP_KEY, 'true');
        }
        
        // 팝업 표시
        function showLaunchPopup() {
            const popupElement = document.getElementById('launchPopup');
            if (popupElement) {
                const modal = new bootstrap.Modal(popupElement, {
                    backdrop: 'static', // 배경 클릭으로 닫히지 않도록
                    keyboard: true      // ESC 키로 닫을 수 있도록
                });
                modal.show();
                
                // 팝업이 닫힐 때 "본 것으로" 표시
                popupElement.addEventListener('hidden.bs.modal', function () {
                    markPopupAsSeen();
                });
            }
        }
        
        // 페이지 로드 후 조건부 팝업 표시
        if (!hasSeenPopup()) {
            setTimeout(showLaunchPopup, LAUNCH_POPUP_DELAY);
        }
        
        // 다시 보기 기능 (개발용 - 콘솔에서 사용 가능)
        window.resetLaunchPopup = function() {
            localStorage.removeItem(LAUNCH_POPUP_KEY);
            console.log('런칭 팝업이 리셋되었습니다. 페이지를 새로고침하면 다시 표시됩니다.');
        };
    });
    
    // 프롬프트 플랫폼 방문 함수
    function visitPromptPlatform() {
        // 네비게이션 바의 프롬프트 플랫폼 링크를 찾아서 클릭
        const promptLink = document.querySelector('a[href*="프롬프트"]') || 
                          document.querySelector('a[href*="prompt"]') ||
                          document.querySelector('a[href="/prompt"]');
        
        if (promptLink) {
            // 같은 탭에서 열기
            window.location.href = promptLink.href;
        } else {
            // 링크를 찾을 수 없는 경우 알림
            alert('프롬프트 플랫폼으로 이동합니다.\n네비게이션 바에서 "프롬프트 플랫폼" 메뉴를 확인해주세요.');
        }
        
        // 팝업 닫기
        const modal = bootstrap.Modal.getInstance(document.getElementById('launchPopup'));
        if (modal) {
            modal.hide();
        }
    }
    </script>
    
    <script>
    let currentSlide = 1;
    let totalSlides = 1;
    let slides = [];

    function initializePresentation(data) {
        const lectureData = typeof data === 'string' ? JSON.parse(data) : data;
        const { title, description, mainTopics } = lectureData;
        
        // 타이틀 슬라이드 준비
        slides = [{
            type: 'title',
            content: `<h1>${title}</h1><h3>${description}</h3>`
        }];
        
        // 주제별 슬라이드 준비
        mainTopics.forEach(topic => {
            slides.push({
                type: 'content',
                content: `
                    <h2>${topic.title}</h2>
                    <ul>
                        ${topic.subTopics.map(sub => `<li>${sub}</li>`).join('')}
                    </ul>
                `
            });
        });
        
        totalSlides = slides.length;
        currentSlide = 1;
        showSlide(1);
        
        document.getElementById('modalTitle').textContent = title;
    }

    function showSlide(n) {
        currentSlide = n;
        if (currentSlide > totalSlides) currentSlide = 1;
        if (currentSlide < 1) currentSlide = totalSlides;
        
        const slideContent = document.getElementById('slideContent');
        slideContent.innerHTML = `<div class="slide active">${slides[currentSlide-1].content}</div>`;
        
        document.getElementById('slideCounter').textContent = `${currentSlide} / ${totalSlides}`;
    }

    function nextSlide() { showSlide(currentSlide + 1); }
    function prevSlide() { showSlide(currentSlide - 1); }
    </script>
</body>
