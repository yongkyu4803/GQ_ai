                </div>
            </div>
        </div>
    </div>

    <!-- Sub Services Section -->
    <div class="sub-services-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="row g-3">
                        <!-- 확장 가능한 서브 버튼 영역 -->
                        <div class="col-md-4">
                            <a href="https://exnews-next.vercel.app/" class="sub-service-btn" data-bg-image="/images/landing/newslens_logo_002.png">
                                <div class="sub-service-content">
                                    <h2 class="sub-service-title">단독&랭킹뉴스</h2>
                                    <h4 class="sub-service-description">실시간 단독뉴스를 제공합니다.<br> 부록: 국회앞식당 정보</h4>
                                </div>
                            </a>
                        </div>
                        <!-- 추후 확장을 위한 주석 영역
                        <div class="col-md-4">
                            <a href="#" class="sub-service-btn">
                                <div class="sub-service-content">
                                    <i class="fas fa-users sub-service-icon"></i>
                                    <h4 class="sub-service-title">커뮤니티</h4>
                                    <p class="sub-service-description">AI 전문가 네트워크</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="#" class="sub-service-btn">
                                <div class="sub-service-content">
                                    <i class="fas fa-blog sub-service-icon"></i>
                                    <h4 class="sub-service-title">블로그</h4>
                                    <p class="sub-service-description">최신 AI 트렌드</p>
                                </div>
                            </a>
                        </div>
                        -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="landing-footer">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <!-- 방문자 통계 -->
                    <div class="visitor-stats-landing mb-3">
                        <div class="row justify-content-center">
                            <div class="col-auto">
                                <div class="stat-item">
                                    <div class="stat-label">총 방문자</div>
                                    <div class="stat-number" id="landing-total-visitors">-</div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <div class="stat-item">
                                    <div class="stat-label">오늘 방문</div>
                                    <div class="stat-number" id="landing-daily-visitors">-</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <p class="footer-text">&copy; 2024 GQ AI. 생성형 AI 전문 교육 플랫폼</p>
                    <div class="footer-links">
                        <a href="/contact">문의하기</a>
                        <span>|</span>
                        <a href="/qna">FAQ</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 방문자 카운트 로드 (랜딩 페이지용)
        async function loadLandingVisitorCounts() {
            try {
                const response = await fetch('/api/visitors');
                const data = await response.json();
                
                // 데이터 검증 및 안전한 표시
                const totalVisitors = data && typeof data.totalVisitors === 'number' ? data.totalVisitors : 0;
                const dailyVisitors = data && typeof data.dailyVisitors === 'number' ? data.dailyVisitors : 0;
                
                // 랜딩 페이지의 방문자 통계 업데이트
                const landingTotalElement = document.getElementById('landing-total-visitors');
                const landingDailyElement = document.getElementById('landing-daily-visitors');
                
                if (landingTotalElement) {
                    landingTotalElement.textContent = totalVisitors.toLocaleString();
                }
                if (landingDailyElement) {
                    landingDailyElement.textContent = dailyVisitors.toLocaleString();
                }
                
                // 개발 모드 표시 (콘솔에서만)
                if (data && data.mode === 'local-memory') {
                    console.log('🏠 로컬 개발 모드: 메모리 저장소 사용 중');
                } else if (data && data.mode === 'vercel-kv') {
                    console.log('☁️ Vercel KV 모드: 클라우드 저장소 사용 중');
                }
                
                if (data && data.error) {
                    console.warn('⚠️ 방문자 카운터 오류:', data.error);
                }
            } catch (error) {
                console.error('Failed to load visitor counts:', error);
                const landingTotalElement = document.getElementById('landing-total-visitors');
                const landingDailyElement = document.getElementById('landing-daily-visitors');
                
                if (landingTotalElement) landingTotalElement.textContent = '0';
                if (landingDailyElement) landingDailyElement.textContent = '0';
            }
        }

        // 카드 호버 효과 및 애니메이션
        document.addEventListener('DOMContentLoaded', function() {
            // 방문자 카운트 로드
            loadLandingVisitorCounts();
            
            const cards = document.querySelectorAll('.service-card');
            
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-10px) scale(1.02)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });

            // 페이지 로드 시 애니메이션
            const heroContent = document.querySelector('.hero-content');
            const serviceCards = document.querySelectorAll('.service-card');
            
            setTimeout(() => {
                if (heroContent) {
                    heroContent.style.opacity = '1';
                    heroContent.style.transform = 'translateY(0)';
                }
            }, 200);

            serviceCards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 400 + (index * 200));
            });

            // 서브 서비스 버튼 호버 효과
            const subServiceBtns = document.querySelectorAll('.sub-service-btn[data-bg-image]');
            
            subServiceBtns.forEach(btn => {
                const bgImage = btn.getAttribute('data-bg-image');
                
                btn.addEventListener('mouseenter', function() {
                    this.style.backgroundImage = `url('${bgImage}')`;
                    this.classList.add('hover-bg');
                });
                
                btn.addEventListener('mouseleave', function() {
                    this.style.backgroundImage = '';
                    this.classList.remove('hover-bg');
                });
            });
        });
    </script>
</body>
</html>